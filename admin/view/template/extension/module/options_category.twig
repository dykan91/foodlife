					{% endif %}
				  </select>
				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-3 control-label" for="input-datetimepicker">{{ entry_datetimepicker }}</label>
				<div class="col-sm-9">
				  <select name="module_options_category_datetimepicker" id="input-datetimepicker" class="form-control">
					{% if module_options_category_datetimepicker %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
				  </select>
				</div>
			  </div>
			</div>
			<div class="tab-pane" id="tab-view">
			  <div class="form-group">
				<label class="col-sm-3 control-label" for="input-compact">{{ entry_compact }}</label>
				<div class="col-sm-9">
