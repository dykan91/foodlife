				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-3 control-label" for="input-quantity">{{ entry_quantity }}</label>
				<div class="col-sm-9">
				  <select name="module_options_category_quantity" id="input-quantity" class="form-control">
					{% if module_options_category_quantity %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
				  </select>
				</div>
			  </div>
			   <div class="form-group">
				<label class="col-sm-3 control-label" for="input-position">{{ entry_position }}</label>
				<div class="col-sm-9">
				  <select name="module_options_category_position" id="input-position" class="form-control">
					{% if module_options_category_position %}
					<option value="1" selected="selected">{{ text_top }}</option>
					<option value="0">{{ text_bottom }}</option>
					{% else %}
					<option value="1">{{ text_top }}</option>
					<option value="0" selected="selected">{{ text_bottom }}</option>
					{% endif %}
				  </select>
				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-3 control-label" for="input-image">{{ entry_image }}</label>
				<div class="col-sm-9">
				  <select name="module_options_category_image" id="input-image" class="form-control">
					{% if module_options_category_image %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
				  </select>
				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-3 control-label" for="input-image-width">{{ entry_image_size }}</label>
				<div class="col-sm-9">
				  <div class="row">
					<div class="col-sm-6">
					  <input type="text" name="module_options_category_image_width" value="{{ module_options_category_image_width }}" placeholder="{{ entry_width }}" id="input-image-width" class="form-control" />
					</div>
					<div class="col-sm-6">
					  <input type="text" name="module_options_category_image_height" value="{{ module_options_category_image_height }}" placeholder="{{ entry_height }}" id="input-image-height" class="form-control" />
					</div>
				  </div>
				</div>
			  </div>
			  <div class="form-group">
				<label class="col-sm-3 control-label" for="input-popup">{{ entry_popup }}</label>
				<div class="col-sm-9">
				  <select name="module_options_category_popup" id="input-popup" class="form-control">
					{% if module_options_category_popup %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
